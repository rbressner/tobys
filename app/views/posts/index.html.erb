<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% if admin_session %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.admin_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<% else %>

    <div class="row">
    <% @posts.each do |post| %>
      <div class="column">
        <div class="card">
          <%= link_to post do %>
      <h2><%= post.title %></h2>
      <h5>Posted: <%= time_ago_in_words(post.created_at) %> ago</h5>
      <p><%= post.content %></p>
      <% end %>
      </div>
      </div>
    <% end %>
  </div>

<br>
<% end %>
