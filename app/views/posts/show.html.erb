<p id="notice"><%= notice %></p>
<div class="post-show">
<div class="card">

  <h2>
  <%= @post.title %></h2>



  <h5><strong>Posted:</strong>
  <%= time_ago_in_words(@post.created_at) %> ago</h5>



  <p>
  <%= @post.content %></p>

  <% if admin_session %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
  <% else %>
  <%= link_to 'Back', posts_path %>
  <% end %>
</div>

</div>
